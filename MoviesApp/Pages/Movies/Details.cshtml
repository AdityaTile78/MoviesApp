@page "{id:int}"
@model DetailsModel
@{
    ViewData["Title"] = "Movie Details";
}

<h2>Movie Details</h2>

<div>
    <h4>@Model.Movie.Title</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Genre</dt>
        <dd class="col-sm-10">@Model.Movie.Genre</dd>

        <dt class="col-sm-2">Release Date</dt>
        <dd class="col-sm-10">@Model.Movie.ReleaseDate.ToShortDateString()</dd>

        <dt class="col-sm-2">Rating</dt>
        <dd class="col-sm-10">@Model.Movie.Rating</dd>
    </dl>

    <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
</div>
